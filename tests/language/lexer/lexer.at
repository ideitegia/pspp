AT_BANNER([lexer])

AT_SETUP([lexer ignores initial @%:@! line])
AT_DATA([lexer.sps], [dnl
#! /usr/local/bin/pspp
DATA LIST LIST NOTABLE /a.
BEGIN DATA.
1
2
END DATA.
LIST.
])
AT_CHECK([pspp -o pspp.csv lexer.sps])
AT_CHECK([cat pspp.csv], [0], [dnl
Table: Data List
a
1.00
2.00
])
AT_CLEANUP

